<div class="login_area">

<h1>Bejelentkezés</h1>
<%= form_tag sessions_path do %>
  <p>
	<%= label_tag :email, 'E-mail cím: ' %><br/>
	<%= text_field_tag :email, params[:email], :required => true %><br/>
  </p>
  
  <p>
	<%= label_tag :password, 'Jelszó: ' %><br/>
	<%= password_field_tag :password %><br/>
  </p>
  
   
  <p class="button">
	<%= submit_tag "Bejelentkezés"%>
  </p>

  <p>
	<%= link_to "Elfelejtettem a jelszavam", new_password_reset_path %><br/>
 </p>

</div>
<% end %>

